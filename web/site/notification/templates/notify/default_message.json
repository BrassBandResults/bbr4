{
  "notification": {
    "module" : "{{Module}}",
    "type" : "{{ObjectType}}",
    "change" : "{{Change}}",
    "user" : "{{User}}",
    "ip" : "{{Ip}}",
    "browser" : "{{Browser}}",
    "destination" : "{{Destination}}",
    "cc" : "{{Cc}}",
    "bcc" : "{{Bcc}}",
    "fromName" : "{{FromName}}",
    "fromEmail" : "{{FromEmail}}",
    "url" : "{{Url}}",
{% for key, value in AdditionalContext.items %}
    "_{{key}}" : "{{value}}",
{% endfor %}     
{% if ThingOldJson %}
    "thingOld" : {% autoescape off %}{{ThingOldJson|safe}}{%endautoescape%},
{% endif %}
{% if ThingNewJson %}    
    "thingNew" : {% autoescape off %}{{ThingNewJson|safe}}{%endautoescape%},
{% endif %}
    "subject" : "{{Subject}}",
    "message" : "{{Message}}"
  }
}